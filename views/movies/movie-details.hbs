<h2>Movie Details</h2>

<h3>Title: {{title}}</h3>
<h3>Movie Genre: {{genre}}</h3>
<h3>Plot: {{plot}}</h3>

<h3>Cast:</h3>
{{#each cast}}
  <p>{{this.name}}</p>
  <p>{{this.occupation}}</p>
  <p>{{this.catchPhrase}}</p>
{{/each}}

<hr />

<form action='/movies/{{_id}}/delete' method='POST'>
  <button>DELETE MOVIE</button>
</form>

<a href='/movies/{{_id}}/edit'>EDIT MOVIE</a>